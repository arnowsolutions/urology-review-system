{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "buildCommand": "npm run build",
                "outputDirectory": "dist"
            }
        },
        {
            "src": "backend/api/index.ts",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/backend/api/index.ts"
        },
        {
            "src": "/(.*)",
            "dest": "/dist/$1"
        }
    ],
    "functions": {
        "backend/api/index.ts": {
            "maxDuration": 30,
            "memory": 1024
        }
    }
}